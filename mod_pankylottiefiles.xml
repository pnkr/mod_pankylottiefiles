<?xml version="1.0" encoding="utf-8"?>
<extension type="module" client="site" method="upgrade">
	<name>mod_pankylottiefiles</name>
	<author>Panayiotis Kiriakopoulos</author>
	<creationDate>March 2022</creationDate>
	<copyright>(C) 2022 Panayiotis Kiriakopoulos.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>kiriakopoulos_p@hotmail.com</authorEmail>
	<authorUrl>https://github.com/pnkr/pankyLottieFiles</authorUrl>
	<version>0.0.1</version>
	<description>MOD_PANKYLOTTIEFILES_XML_DESCRIPTION</description>

	<customContent />

	<files>
		<filename module="mod_pankylottiefiles">mod_pankylottiefiles.php</filename>
		<folder>tmpl</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/mod_pankylottiefiles.ini</language>
		<language tag="en-GB">language/en-GB/mod_pankylottiefiles.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="options" label="COM_MODULES_BASIC_FIELDSET_LABEL">
				<field
					name="prepare_content"
					type="radio"
					layout="joomla.form.field.radio.switcher"
					label="MOD_PANKYLOTTIEFILES_FIELD_PREPARE_CONTENT_LABEL"
					description="MOD_PANKYLOTTIEFILES_FIELD_PREPARE_CONTENT_DESC"
					default="0"
					filter="integer"
					>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field
					name="backgroundimage"
					type="media"
					label="MOD_PANKYLOTTIEFILES_FIELD_BACKGROUNDIMAGE_LABEL"
				/>
                <field
                    name="jsonlottie"
                    type="textarea"
                    label="MOD_PANKYLOTTIEFILES_FIELD_JSONLOTTIE_LABEL"
			</fieldset>
			<fieldset name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					class="form-select"
					validate="moduleLayout"
				/>

				<field
					name="moduleclass_sfx"
					type="textarea"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					rows="3"
					validate="CssIdentifier"
				/>

				<field
					name="cache"
					type="list"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					default="1"
					filter="integer"
					validate="options"
					>
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="number"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					default="900"
					filter="integer"
				/>

				<field
					name="cachemode"
					type="hidden"
					default="static"
					>
					<option value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
